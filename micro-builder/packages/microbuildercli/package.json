{
  "name": "@micro.builder.io/microbuildercli",
  "description": "An CLI tool that installs tailwindcss in your project. ",
  "version": "0.0.1",
  "type": "module",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@antfu/ni": "^0.21.4",
    "chalk": "^5.2.0",
    "child_process": "^1.0.2",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "lodash.template": "^4.5.0",
    "ora": "^8.1.0",
    "stringify-object": "^5.0.0",
    "ts-morph": "^18.0.0",
    "tsconfig-paths": "^4.2.0",
    "@clack/core": "latest",
    "@clack/prompts": "latest",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/diff": "^5.2.1",
    "cleye": "^1.3.2",
    "diff": "^5.2.0",
    "execa": "^9.1.0",
    "playwright": "^1.44.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BuilderIO/micro-agent"
  },
  "bin": {
    "micro-agent": "./dist/cli.mjs",
    "ma": "./dist/cli.mjs"
  },
  "scripts": {
    "test": "vitest run --exclude src/tests/integration",
    "test:integration": "vitest run src/tests/integration --exclude src/tests/integration/add.test.ts --poolOptions.threads.singleThread",
    "test:all": "vitest run",
    "start": "jiti ./src/cli.ts",
    "lint:fix": "prettier --write . && eslint --fix",
    "lint": "prettier --check . && eslint",
    "typecheck": "tsc",
    "build": "pkgroll",
    "release:patch": "npm run build && standard-version --release-as patch git push --follow-tags origin main && npm publish",
    "standard-version:release": "standard-version",
    "standard-version:release:minor": "standard-version --release-as minor",
    "standard-version:release:major": "standard-version --release-as major",
    "standard-version:release:patch": "standard-version --release-as patch",
    "postinstall": "npx playwright install"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.38.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jiti": "^1.21.3",
    "pkgroll": "^1.9.0",
    "prettier": "^2.8.8",
    "standard-version": "^9.5.0",
    "typescript": "^4.9.5",
    "vitest": "^1.6.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.13",
    "@types/lodash.template": "^4.5.1",
    "@types/mocha": "^10.0.8",
    "npm": "^10.8.3",
    "rimraf": "^4.1.3"
  }
}
